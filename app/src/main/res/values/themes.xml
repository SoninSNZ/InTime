<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="MyTimePickerStyle" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="colorControlNormal">@color/pink</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorSurface">@color/white</item>
    </style>

    <style name="MyDatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/pink</item>
        <item name="colorAccent">@color/pink</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorSurface">@color/white</item>
    </style>
</resources>